<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity">

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btStartBound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start service"
            app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btStopBound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="stop service"
            app:layout_constraintTop_toBottomOf="@id/btStartBound" />


    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btGetNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="get random number"
            app:layout_constraintTop_toBottomOf="@id/btStopBound" />

</androidx.constraintlayout.widget.ConstraintLayout>